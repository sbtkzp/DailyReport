<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= link_to report.title, report %></td>
        <td><%= report.body[0..10] + "..." %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', report, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Report', new_report_path %>

